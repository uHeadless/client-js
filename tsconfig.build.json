{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019", "esnext", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "declaration": true
  },

  "exclude": [
    "node_modules",
    "dist"
  ],

  "include": [
    "src/**/*"
  ]
}